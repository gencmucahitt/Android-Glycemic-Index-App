<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/foodLayout"
    android:paddingHorizontal="12dp"
    android:paddingVertical="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/r_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="44dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="101dp"
                    android:layout_height="67dp"
                    android:text="Besin Maddesi"
                    android:textColor="#1D7480"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="101dp"
                    android:layout_height="67dp"
                    android:text="Glisemik İndex"
                    android:textColor="#1D7480"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_column="1"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="101dp"
                    android:layout_height="67dp"
                    android:text="Karbonhidrat miktarı (100 g'daki)"
                    android:textColor="#1D7480"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_column="2"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="87dp"
                    android:layout_height="67dp"
                    android:text="Kalori (100 g'daki)"
                    android:textColor="#1D7480"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_column="3"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="99dp"
                    android:layout_height="71dp"
                    android:text="TextView"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/txtGlyindex"
                    android:layout_width="99dp"
                    android:layout_height="71dp"
                    android:text="TextView"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_column="1"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/txtKarbon"
                    android:layout_width="99dp"
                    android:layout_height="71dp"
                    android:text="TextView"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_column="2"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/txtCalori"
                    android:layout_width="99dp"
                    android:layout_height="71dp"
                    android:text="TextView"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_column="3"
                    app:layout_row="1" />
            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>